{
  "name": "nestjs-pretty-logger",
  "version": "0.3.2",
  "private": true,
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "description": "Elevate NestJS logging with stylish, file-redirected, and real-time capable logging based on consola. Compact, powerful, and easy to integrate",
  "author": "Innei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Innei/nestjs-pretty-logger"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "release": "bump",
    "test": "vitest"
  },
  "devDependencies": {
    "@innei/bump-version": "1.5.10",
    "@innei/prettier": "0.15.0",
    "@nestjs/common": "^11.1.1",
    "@types/node": "22.15.18",
    "eslint": "^9.27.0",
    "eslint-config-hyoban": "4.0.7",
    "husky": "9.1.7",
    "lint-staged": "16.0.0",
    "prettier": "3.5.3",
    "tsdown": "0.11.11",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache"
    ]
  },
  "bump": {
    "before": [
      "npm run build"
    ],
    "publish": true,
    "changelog": true,
    "mode": "monorepo",
    "packages": [
      "packages/*"
    ]
  }
}